// Прежде чем показывать заставку, нам нужно проверять текущее время
// (условие автора - показ в нерабочее время: с 18:00 до 9:00).
// Вот, что нужно добавить в основной JavaScript-файл:

function isAfterHours() { // Функция для проверки, активно ли нерабочее время
    const now = new Date();
    const hours = now.getHours();
    return hours >= 17 || hours < 9; // Нерабочее время: с 18:00 (18) до 9:00 (9)
}

function toggleScreensaver() { // Функция для переключения между основным режимом и скринсейвером
    const mainContent = document.getElementById('main-content'); // Основной контент
    const screensaver = document.getElementById('screensaver'); // Контейнер скринсейвера

    if (isAfterHours()) {
        if (mainContent) mainContent.style.display = 'none'; // Показываем заставку, скрываем основной контент
        if (screensaver) screensaver.style.display = 'block';
    } else {
        if (mainContent) mainContent.style.display = 'block'; // Показываем основной контент, скрываем заставку
        if (screensaver) screensaver.style.display = 'none';
    }
}

window.onload = function() { // Проверяем при загрузке страницы и затем каждую минуту
    toggleScreensaver();
    setInterval(toggleScreensaver, 60000); // Проверяем каждую минуту
};
